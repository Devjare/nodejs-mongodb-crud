<%- include('partials/_header') %>
<div class="container-fluid">
    <div class="card m-5">
        <div class="card-body">
            <form action="/update/<%= task._id; %>" method="POST">
                <div class="form-group">
                    <input type="text" name="title" value="<%= task.title; %>" placeholder="Insert a title"
                        class="form-control">
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" value="" placeholder="Insert a description"
                        class="form-control"><%= task.description; %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>